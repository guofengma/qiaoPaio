<view class="addr-box">

  <view class='line-box center-flex'>
    <text class='label'>姓名:</text>
    <input class='line-input' placeholder='请输入您的姓名' data-index='1' bindinput='dataVal' value='{{dataVal1}}'></input>
  </view>

  <view class='line-box center-flex mb40'>
    <text class='label'>电话:</text>
    <input class='line-input' type='number' placeholder='请输入您的电话' data-index='2'  bindinput='dataVal' value='{{dataVal2}}'></input>
  </view>

  <view class='line-box center-flex'>
    <text class='label'>地址:</text>
    <input class='line-input' placeholder='请输入您的地址' data-index='3' bindinput='dataVal' value='{{dataVal3}}'></input>
  </view>

</view>

<view class='btn-box'>
  <button class='btn yellow-btn' bindtap='exchange'>立即兑换</button>
</view>