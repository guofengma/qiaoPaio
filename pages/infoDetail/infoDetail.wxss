.info-video{
  width: 100%;
  margin: 0;
}
.info-img{
  width: 100%;
  display: block;
  margin: 0;
}
.info-con{
	padding: 30rpx;
	line-height: 46rpx;
}

.info-con image{
  max-width: 100%;
}

/* 操作 */
.info-handle-box{
	padding:20rpx 30rpx;
}
.handle-box{
	display: inline-block;
	margin-right: 40rpx;
}
.handle-icon{
	width: 30rpx;
	margin-right: 10rpx;
}
.fenXiang-box{
  position: relative;
}
.zf-btn{
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	opacity: 0;
}
/*评论*/
.comment-box{

}
.comment-tit{
	height: 68rpx;
	line-height: 68rpx;
	color: #dd1d21;
	background: #f0f0f0;
	border-top: 1rpx solid #d9d9d9;
	border-bottom: 1rpx solid #d9d9d9;
	padding-left: 30rpx;
}
.comment-cont{
	padding: 20rpx 30rpx;
}
.comment-item{
	padding-top: 30rpx;
	border-bottom: 1rpx dashed #f0f0f0;
}
.comment-user-info{
	margin-bottom: 20rpx;
}
.comment-userHead{
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
	margin-right: 10rpx;
}
.comment-item-comment{
	max-height: 190rpx;
	overflow: hidden;
	line-height: 46rpx;
}
/* 评价  */
.pl-box{
	padding: 16rpx 0 16rpx 20rpx;
	border-bottom: 1px solid #fff;
	background: #f5f5f5;
}
.pl-input{
	height: 78rpx;
	border-radius: 30rpx;
	background: #ededed;
	width: 600rpx;
	display: inline-block;
}
.pl-btn{
	color: #e22319;
	width: 130rpx;
	text-align: center;
	font-size: 32rpx;
	line-height: 78rpx;
	display: inline-block;
	vertical-align: top;
}

/* 资源 下载 */
.zl-box{
	margin-bottom: 20rpx;
}
.zl-tit{
	color: #e22319;
	background:#f0f0f0;
	border-top:1rpx solid #d9d9d9;
	border-bottom:1rpx solid #d9d9d9;
	padding-left: 20rpx;
}
.zl-con{
	padding: 0 30rpx;
}
.zl-tit{
	height: 60rpx;
	line-height: 60rpx;
}
.zl-item{
	height: 80rpx;
	line-height: 80rpx;
	border-bottom: 1rpx solid #d9d9d9;
}

.tips{
	font-size: 22rpx;
}
.zl-hint{
	font-size: 22rpx;
	line-height: 40rpx;
	height: 40rpx;
	padding-left: 20rpx;
	color: #e22319;
}