.marginBottom{
  margin-bottom: 20rpx;
}
.calendar{
  width: 100%;
}
.colorAsh{
  color: #999
}
.dateControl{
  width: 100%;
  background: #fff;
}
.dateControl .title{
  width: 100%;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f7f7f7;
}
.dateControl .timeList{
  padding: 20rpx 0;
}
.dateControl .cycle{
  width: 100%;
  display: flex;
}
.dateControl .cycle .text{
  flex: 0 0 14.285714285714286%;
  text-align: center;
}
.dateControl .dateList{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.dateControl .dateList .text{
  flex: 0 0 14.285714285714286%;
  text-align: center;
  height: 60rpx; 
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}
.dateControl .dateList .text .backg{
   width: 50rpx;
   height: 50rpx;
   display: flex;
   justify-content: center;
