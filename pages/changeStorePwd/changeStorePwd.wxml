<view class="logo-box">
  <image class='logo' mode='widthFix' src="/images/logo.png"></image>
  <view class='slogn'>修改密码</view>
</view>
<view class='form-box'>
  <view class='form-controller'>
    <image class='sign-icon' mode='widthFix' src="/images/pass.png"></image>
    <input type="password" name="proPwd" data-name="proPwd" bindinput='saveInput' placeholder="请输入原密码" class="form-input"></input>
  </view>
  <view class='form-controller'>
    <image class='sign-icon' mode='widthFix' src="/images/pass.png"></image>
    <input type="password" name="proPwd" data-name="newPwd" bindinput='saveInput' placeholder="请输入新密码" class="form-input"></input>
  </view>
</view>
<button class="btn form-btn red-btn" bindtap='changeStorePwd'>确认</button>