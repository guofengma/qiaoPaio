@import "/pages/template/infoItem/infoItem.wxss";

.slogn{
	text-align: center;
	padding-bottom: 16rpx;
	border-bottom: 1rpx solid #f0f0f0;
}
.dslogn{
	color: #dc1721;
	font-size: 32rpx;
	margin-bottom: 18rpx;
}
.xslogn{
	color: #2c2c2c;
}


/* 搜索框 */
.search-box{
  border-radius: 50rpx;
  box-sizing: border-box;
  position:relative;
  margin: 20rpx 30rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
}
.search-icon{
  position: absolute;
  top: 20rpx;
  z-index: 2; 
  left: 20rpx;
}
.search{
  height: 68rpx;
  width: 600rpx;
  display: inline-block;
  font-size: 28rpx;
  background: #ededed;
  padding-left: 60rpx;
  box-sizing: border-box;
  border-radius: 5rpx;
}
/*搜索*/
.search-box image {
  width: 50rpx;
  height: 50rpx;
}
.search-btn{
	width: 90rpx;
	text-align: right;
	color: #fcce07;
}


/* 轮播图 */
.swiper{
	width: 100%;
	height: 250rpx;
}

/*分类*/
.cate-box{
	font-size: 0;
}
.cate-item{
	width: 25%;
	display: inline-block;
	height: 184rpx;
	padding-top: 35rpx;
	text-align: center;
	font-size: 30rpx;
}
.cate-icon{
	width: 86rpx;
	margin-bottom: 24rpx;
}


/*信息列表*/
.info-list-box{
	border-top: 1rpx solid #f0f0f0;
}
.info-tit-box{
	border-top: 20rpx solid #f7f7f7;
	height: 68rpx;
	display: flex;
	display: -webkit-flex;
	align-items: center;
	background: #fcce07;
	padding: 0 30rpx;
	color: #010101;
	border-bottom: 5rpx solid #d81e06;
}
.info-list-tit-icon{
	width: 37rpx;
	margin-right: 20rpx;
}
.info-list-tit{
	width: 520rpx;
}
